{% extends 'base.html.twig' %}

{% block title %}Carte index{% endblock %}

{% block body %}
    <h1>Carte index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>PV</th>
                <th>Armure</th>
                <th>Attaque</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for carte in cartes %}
            <tr>
                <td>{{ carte.titre }}</td>
                <td>{{ carte.description }}</td>
                <td>{{ carte.PV }}</td>
                <td>{{ carte.armure }}</td>
                <td>{{ carte.attaque }}</td>
                <td>
                    <a href="{{ path('carte_show', {'id': carte.id}) }}">show</a>
                    <a href="{{ path('carte_edit', {'id': carte.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('carte_new') }}">Create new</a>
{% endblock %}
