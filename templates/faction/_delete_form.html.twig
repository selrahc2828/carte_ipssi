<form method="post" action="{{ path('faction_delete', {'id': faction.id}) }}" onsubmit="return confirm('Voulez vous supprimer cette faction ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ faction.id) }}">
    <button class="btn">Delete</button>
</form>
